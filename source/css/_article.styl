.article
    position: relative

    .markdown-body

        border: 0
        border-radius: 3px

        @media only screen and (max-width: $vw-level-two)
            padding: 10px
            font-size: 13px
            line-height: 1.4

        h2
            border-bottom: 0

        table

            th
                font-weight: bold

        blockquote
            font-style: italic

            @media only screen and (max-width: $vw-level-two)

                padding: 0 12px
