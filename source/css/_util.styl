.main-container
    max-width: $vw-level-three

    @media screen and (max-width: $vw-level-three)
        padding: 0 10px
        width: auto

    @media screen and (max-width: $vw-level-two)
        padding: 0 5px
        width: auto

    @media screen and (max-width: $vw-level-one)
        width: $vw-level-one

.margin-at
    margin-left: auto
    margin-right: auto

.margin-t60
    margin-top: 3.3rem

    @media only screen and (max-width: $vw-level-two)
        margin-top: 1.6rem

.margin-b60
    margin-bottom: 3.3rem

    @media only screen and (max-width: $vw-level-two)
        margin-bottom: 1.6rem

