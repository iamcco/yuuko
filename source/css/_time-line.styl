.time-line
    margin: 0 0 60px 110px
    border-left: 4px solid $color-preview-bg
    border-bottom: 4px solid $color-preview-bg
    border-radius: 0 0 0 4px

    @media only screen and (max-width: $vw-level-three)
        margin: 0
        border: 0

    .item
        position: relative
        padding-left: 30px

        @media only screen and (max-width: $vw-level-three)
            padding: 0

        &:hover
            .left-angle:before
                animation: getBlue .5s forwards

        .index-year
            position: relative
            height: 100px

            @media only screen and (max-width: $vw-level-three)
                height: 0

            .panel
                display: inline-block
                position: relative
                box-sizing: border-box
                width: 100px
                height: 26px
                line-height: 26px
                left: -130px
                top: 34px
                padding: 0 10px
                border-radius: 10px 2px 2px 10px
                font-size: $font-h3
                color: $color-preview-content
                background: $color-preview-bg

                @media only screen and (max-width: $vw-level-three)
                    display: none
                    left: 0
                    top: 0

        .pages
            position: absolute

            .page
                position: relative
                top: -11px
                display: inline-block
                box-sizing: border-box
                width: 26px
                height: 26px
                margin-right: 10px
                line-height: 26px
                border-radius: 13px
                text-align: center
                font-size: $font-h3
                color: $color-index-font
                background: $color-preview-bg

                a
                    text-decoration: none
                    color: $color-index-font

            .current
                background: $color-lblue


